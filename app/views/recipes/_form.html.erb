<div id="menu">
    <%= render 'layouts/navbar' %>
</div> 



    
 <div class="main">
   
    <%= form_for @recipe, html: {class: 'basic-grey'} do |f| %>
      <% if flash[:notice] %>
      <div class="alert alert-warning">
        <%= flash[:notice] %>
      </div>
      <% end %>
      
      <% if @recipe.title.nil? %>
        <h1>Nova Receita</h1>
      <% else %>
        <h1>Editando <%= @recipe.title %></h1>
      <% end %> 
      
      <div class="field">
        <%= f.label :title, 'TÃ­tulo' %>
        <%= f.text_field :title %>
      </div>
      
      <div class="field">
        <%= f.label :cuisine_id, 'Cozinha' %>
        <%= f.collection_select(:cuisine_id, @cuisine_all, :id, :name) %>
      </div>
      
      <div class="field">
        <%= f.label :recipe_type_id, 'Tipo da Receita' %>
        <%= f.collection_select(:recipe_type_id, @recipe_type_all, :id, :name) %>
      </div>
    
      <div class="field">
        <%= f.label :difficulty, 'Dificuldade' %>
        <%= f.text_field :difficulty %>
      </div>
      
      <div class="field">
        <%= f.label :cook_time, 'Tempo de Preparo' %>
        <%= f.text_field :cook_time %>
      </div>
      
      <div class="field">
        <%= f.label :ingredients, 'Ingredientes' %>
        <%= f.text_field :ingredients %>
      </div>
      
      <div class="field">
        <%= f.label :method, 'Como Preparar' %>
        <%= f.text_field :method %>
      </div>
      
      <div> 
        <%= f.submit 'Enviar', class:'button' %>
      </div>
    <% end %>
  
</div>
